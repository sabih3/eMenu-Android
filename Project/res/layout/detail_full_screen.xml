<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
<LinearLayout

              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="3"
              android:background="@color/white">

    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="2"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/dialog_order_removeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_previous_item"
                    />
            <TextView
                    android:id="@+id/dialog_order_categoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Burger"
                    android:textColor="@color/maroon"
                    android:textSize="30sp"
                    android:textAllCaps="true"
                    />
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginLeft="50dp"
                >


        <TextView
                android:id="@+id/dialog_order_itemName"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="BBQ SANDWICHES"
                android:textColor="@color/maroon"
                android:textSize="30sp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        <LinearLayout
                android:layout_width="620dp"
                android:layout_height="400dp"
                android:orientation="horizontal">

            <FrameLayout
                    android:id="@+id/order_image_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dialog_order_image_bg"
                    android:focusable="false" >

                <ImageView
                        android:id="@+id/dialog_order_image"
                        android:layout_width="610dp"
                        android:layout_height="390dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sample_burger1_no_bg"
                        android:scaleType="centerCrop"    />
            </FrameLayout>

            <ListView
                    android:id="@+id/imageGalleryViewList"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    >

            </ListView>

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            <ImageView
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/star_red"/>

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/star_red"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/star_red"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/star_red"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/star_red"/>



            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Views(12)"
                    android:textColor="@color/maroon"
                    android:textSize="20sp"
                    android:maxLines="1"
                    />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="20dp">


            <ImageView android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/background_burger"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/cheff_name"
                        android:textColor="@color/maroon"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:layout_marginBottom="5dp"/>

                <TextView
                        android:id="@+id/cheffDescription"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/cheff_description"
                        android:textSize="20sp"
                        android:maxLines="3"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


    <include layout="@layout/detail_item_right">

    </include>
</LinearLayout>
</LinearLayout>