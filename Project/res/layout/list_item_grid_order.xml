<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/list_item_grid_parent"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:background="@drawable/grid_item_background_order"

        >



        <ImageView
                android:id="@+id/grid_item_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/sample_burger1_no_bg"
                />

        <TextView
                android:id="@+id/grid_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grid_item_image"
                android:text="30.00 AED"
                android:textColor="@color/maroon"/>

        <TextView

                android:id="@+id/grid_item_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid_item_price"
                android:text="Les infos burgers"
                android:textColor="@color/maroon"/>

        <TextView
                android:id="@+id/grid_item_order_quantity"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/grid_item_image"
                  android:layout_toRightOf="@+id/grid_item_price"
                  android:layout_marginLeft="50dp"
                android:text="3"/>


</RelativeLayout>