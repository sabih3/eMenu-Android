<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            >

    <View android:layout_width="20dp" android:layout_height="20dp">

    </View>


    <LinearLayout     android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@drawable/main_order_frame"
                      android:padding="10dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Total"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp" />
        <TextView
                android:id="@+id/grid_item_order_quantity"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2000.0"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#992004"
                android:layout_marginLeft="5dp" />

                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Rs"
                        android:textSize="17sp"
                        android:textColor="#992004"
                      />

                <TextView
                        android:id="@+id/grid_ItemQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:text="1 item(s)"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                >

            <FrameLayout
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/dialog_order_image_bg"
                    android:layout_marginLeft="10dp"
                    android:focusable="false"
                    android:layout_marginBottom="10dp">

                <ImageView
                        android:id="@+id/grid_item_image"
                        android:layout_width="176dp"
                        android:layout_height="115dp"
                        android:src="@drawable/sample_burger"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"/>
            </FrameLayout>

            <LinearLayout     android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center">

         <CheckBox
                android:id="@+id/grid_item_order_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/cross"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="left"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"/>

            </LinearLayout>
        </LinearLayout>



            <LinearLayout android:layout_width="700dp"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                         >

        <TextView

                android:id="@+id/grid_item_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid_item_price"
                android:text="Les infos burgers"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#992004"
                android:maxLines="1"
                android:layout_marginLeft="10dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
        <TextView
                android:id="@+id/grid_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="400"
                android:textSize="20sp"
                android:textColor="#000000"/>

                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Rs"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
