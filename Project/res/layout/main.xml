<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="3"
              android:background="@drawable/background_burger"
        >


    <fragment

            android:id="@+id/mainScreen_categoryList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            class = "com.attribe.waiterapp.screens.CategoryScreen"

            />

    <fragment

            android:id="@+id/fragment_itemScreen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.05"
            class = "com.attribe.waiterapp.screens.CategoryItemScreen"
            />
</LinearLayout>

